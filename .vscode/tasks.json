{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            // Task name
            "label": "build",
            // Default task to build shortcut
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            // Build webpack composition file
            "command": "webpack",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "always",
                "panel": "shared"
            }            
        }
    ]
}